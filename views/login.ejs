<%- include('header') -%>

    <link rel="stylesheet" href="css/styles2.css">

    <div id="login">
        <h3 class="text-center text-white pt-5">Login form</h3>
        <div class="container">
            <div id="login-row" class="row justify-content-center align-items-center">
                <div id="login-column" class="col-md-6">
                    <div id="login-box" class="col-md-12">
                        <form id="loginForm" class="form" action="/" method="post">
                            <h3 class="text-center text-info">Login</h3>
                            <div class="form-group">
                                <label for="username" class="text-info">Email</label><br>
                                <input type="email" name="email" id="email" class="form-control" required>
                            </div>
                            <div class="form-group">
                                <label for="password" class="text-info">Password:</label><br>
                                <input type="password" name="password" id="password" class="form-control"
                                    autocomplete="off" required>
                            </div>
                            <div class="form-group">
                                <label for="remember-me" class="text-info"><span>Remember me</span>Â <span><input
                                            id="remember-me" name="remember-me" type="checkbox"></span></label><br>
                                <input onclick="myFunction()" type="submit" name="submit" class="btn btn-info btn-md"
                                    value="submit">
                            </div>

                        </form>

                    </div>
                </div>

            </div>
        </div>

        <div>


            <h1 style="color: white;
                       position: relative;
                       left: 27.3%;">Not an existing castomer? <br> Sign yourself up here.. <a
                    style="color: aquamarine;" href="/signup"> Sing
                    Up</a>
            </h1>
        </div>
    </div>
    <script>
        $('#loginForm').submit((e) => {
            e.preventDefault();

            let password = $('#password').val();
            let email = $('#email').val();

            $.post('/', { email: email, password: password }, (res) => {
                if (res.code == 1) {
                    alert(res.msg)
                    window.location.href = '/home';
                } else {
                    alert(res.msg)
                    // $.notify(res.msg);
                    window.location.reload();
                }
            })

        })



    </script>

    <%- include('footer') -%>
